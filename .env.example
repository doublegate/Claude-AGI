# Claude-AGI Environment Configuration
# Copy this file to .env and fill in your actual values

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=claude_agi
POSTGRES_USER=claude_agi_user
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Security Settings
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Service Ports
API_PORT=8000
WEBSOCKET_PORT=8001

# Memory Settings
MAX_MEMORY_SIZE_MB=1024
MEMORY_CLEANUP_INTERVAL_HOURS=24

# Consciousness Settings
THOUGHT_INTERVAL_SECONDS=2
MAX_CONCURRENT_STREAMS=5
CONSCIOUSNESS_SAVE_INTERVAL_MINUTES=5

# Safety Settings
SAFETY_CHECK_ENABLED=true
MAX_ACTIONS_PER_MINUTE=60
EMERGENCY_SHUTDOWN_PHRASE=emergency_stop_now

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000